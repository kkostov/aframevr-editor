{
    "name": "avr-editor",
    "version": "0.1.0",
    "description": "Desktop editor for A-Frame",
    "main": "src/index.js",
    "author": "Konstantin Kostov <me@kvkostov.eu>",
    "license": "MIT",
    "scripts": {
        "start": "electron ."
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base"
        ],
        "env": {
            "browser": true
        },
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "rules": {
            "semi": [
                "error",
                "never"
            ],
            "indent": [
                "error",
                4
            ],
            "react/jsx-uses-react": "error",
            "class-methods-use-this": "off",
            "import/no-extraneous-dependencies": [
                "off"
            ],
            "global-require": [
                "off"
            ]
        }
    },
    "dependencies": {},
    "devDependencies": {
        "electron": "^1.4.15",
        "eslint": "^3.16.1",
        "eslint-config-airbnb-base": "^11.1.0"
    }
}
