{
    "name": "aframevr-editor",
    "version": "0.1.0",
    "description": "Desktop editor for A-Frame",
    "main": "src/main.js",
    "author": "Konstantin Kostov <me@kvkostov.eu>",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "test": "jest",
        "test-watch": "jest --watch"
    },
    "eslintConfig": {
        "plugins": [
            "jest"
        ],
        "extends": [
            "airbnb-base"
        ],
        "env": {
            "browser": true,
            "jest/globals": true
        },
        "parserOptions": {
            "ecmaFeatures": {}
        },
        "rules": {
            "semi": [
                "error",
                "never"
            ],
            "indent": [
                "error",
                2
            ],
            "class-methods-use-this": "off",
            "import/no-extraneous-dependencies": [
                "off"
            ],
            "global-require": [
                "off"
            ],
            "func-names": [
                "warn",
                "never"
            ]
        }
    },
    "dependencies": {
        "aframe": "^0.5.0",
        "electron-config": "^0.2.1"
    },
    "devDependencies": {
        "electron": "^1.4.15",
        "eslint": "^3.16.1",
        "eslint-config-airbnb-base": "^11.1.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-jest": "^19.0.1",
        "jest": "^19.0.2"
    }
}
